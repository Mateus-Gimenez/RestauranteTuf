@model Mesa

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" name="viewport" content="width=device-width" />
    <title>QR Code - @(Model.Restaurante.Nome) @(Model.Codigo)</title>

    <style>
        body {
            width: 100%;
            height: 1392px;
            margin: 0;
            padding: 0;
            font-family: 'Zeyada', cursive !important;
        }

        .border {
            position: fixed;
            top: 0;
            left: 0;
            border: 5px double;
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
            page-break-inside: avoid;
            box-sizing: border-box;
            border: 4px solid black
        }

    </style>
</head>

<body>
    <div class="border">
        <div style="width: 100%; padding: 15px; text-align: center; padding-top: 350px">
            <h1>@(Model.Restaurante.Nome)</h1>
            <img src="data:image/png;base64,@(Model.Base64QrCode)" />
            <h3>Mesa @(Model?.Codigo)</h3>
            @*<div style="margin-top: 35px">&nbsp;</div>*@
        </div>
    </div>
</body>

</html>