@{
    ViewData["Title"] = "Login";
}

<component type="typeof(Login)" render-mode="Server" />

<script>
    function realizaLogin(args) {
        var retorno = null
        $.ajax({
            method: 'POST',
            url: "@(Url.Action("RealizaLogin", "Autenticacao"))",
            data: args,
            dataType: 'json',
            async: false,
            success: function (data) {
                retorno = data;
            },
            error: function (e) {
                return {
                    Sucesso: false,
                    Mensagem: e.errorText
                };
            }
        });
        return retorno;
    }

    function redirecionaHome() {
        window.location.href = '@(ViewBag.ReturnUrl)';
    }
</script>

